package com.biblioteca.dao;

import com.biblioteca.entita.Elemento;

import jakarta.persistence.EntityManager;

public class ElementoDAO {
    private EntityManager em;

    public ElementoDAO(EntityManager em) {
        this.em = em;
    }

    public void aggiungiElemento(Elemento elemento) {
        em.persist(elemento);
    }

    public void rimuoviElemento(Elemento elemento) {
        em.remove(em.contains(elemento) ? elemento : em.merge(elemento));
    }
}
